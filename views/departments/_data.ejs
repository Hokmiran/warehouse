<div class="content-box">
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead class="table__header">
                <tr>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table__body">
                <% if(locals.departments) {
                    departments.forEach((department)=>{ %>
                <tr>
                    <td><%= department.name %></td>
                    <td class="table__actions text-center"
                        data-item-id="<%= department.id %>">
                        <a href="#" class="table__actions-btn departmentEditButton"
                            data-toggle="modal" data-target="#addDepartment"><i
                                class="ic-pencil pr-2"></i>Edit</a>
                        <a href="#" class="table__actions-btn"
                            data-toggle="modal" data-target="#deleteModal"><i
                                class="ic-trash pr-2"></i>Delete</a>
                    </td>
                </tr>
                <% })} %>
            </tbody>
        </table>
    </div>
</div>